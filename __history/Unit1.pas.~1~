procedure TForm1.FormCreate(Sender: TObject);
begin

Left := (Screen.Width - Width) div 2;
Top := (Screen.Height - Height) div 2;
end;

procedure TForm1.GoTo1Click(Sender: TObject);
begin
Form5.Memo1.Clear; //очищаем Memo перед выводом нового текста
Form5.Memo1.Lines.Add('Дифференциальные уравнения были изобретены Ньютоном (1642—1727). Ньютон считал это свое изобретение настолько важным, что зашифровал его ');
Form5.Memo1.Lines.Add('в виде анаграммы или передать так: «законы природы выражаются дифференциальными уравнениями».');
Form5.Memo1.Lines.Add('Такие зависимости отыскиваются в различных областях знаний: в механике, физике, химии, биологии, экономике и др.');
Form5.show;
end;

procedure TForm1.Label1Click(Sender: TObject);
begin
form4.show;
form1.hide;
end;

procedure TForm1.Label2Click(Sender: TObject);
begin
form3.show;
form1.hide;
end;

procedure TForm1.Label3Click(Sender: TObject);
begin
form2.Show;
form1.hide;
end;


procedure TForm1.Object1Click(Sender: TObject);
begin
Form5.Memo1.Clear; //очищаем Memo перед выводом нового текста
Form5.Memo1.Lines.Add('Эта программа создна единственным и неповторимым');
Form5.Memo1.Lines.Add('Гапоником Артур Тадеушевичем');
Form5.Memo1.Lines.Add('В 2023 году');
Form5.show;
end;





